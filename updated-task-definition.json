{
    "family": "cows-shelter-app",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::002824154008:role/cows-shelter-ecs-task-execution-role",
    "taskRoleArn": "arn:aws:iam::002824154008:role/cows-shelter-ecs-task-role",
    "containerDefinitions": [
        {
            "name": "app",
            "image": "002824154008.dkr.ecr.eu-north-1.amazonaws.com/cows-shelter-app:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "DB_HOST",
                    "value": "cows-shelter-db.cfcuqq86u682.eu-north-1.rds.amazonaws.com"
                },
                {
                    "name": "DB_PORT",
                    "value": "5432"
                },
                {
                    "name": "DB_USER",
                    "value": "postgres"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "OsIUxvObUVCUtIiW"
                },
                {
                    "name": "DB_NAME",
                    "value": "cows_shelter"
                },
                {
                    "name": "GIN_MODE",
                    "value": "release"
                },
                {
                    "name": "AWS_REGION",
                    "value": "eu-north-1"
                },
                {
                    "name": "S3_BUCKET",
                    "value": "cows-shelter-uploads"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/cows-shelter-app",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048"
}
